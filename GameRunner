    {
      Scanner in = new Scanner (System.in);
      boolean gameRunning = true;
      String userInput = "";
      while (gameRunning == true) 
        {
          System.out.println("your game goes here");
          Game.game();
          
          System.out.println("Would you like to play again? (Type y/n)");
